pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')  // Docker Hub credentials securely pulled
    }

    stages {
        stage('Checkout Code') {
            steps {
                bat 'git version' 
                checkout scm
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    bat "docker build -t gauravjhagk/frontend:latest ./frontend"
                    bat "docker build -t gauravjhagk/backend:latest ./backend"
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    // Use Jenkins credentials environment variables
                    bat "docker login -u %DOCKERHUB_CREDENTIALS_USR% -p %DOCKERHUB_CREDENTIALS_PSW%" 
                    // %DOCKERHUB_CREDENTIALS_USR% is the username, %DOCKERHUB_CREDENTIALS_PSW% is the password
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    bat "docker push gauravjhagk/frontend:latest"
                    bat "docker push gauravjhagk/backend:latest"
                }
            }
        }
    }
    
    
    post {
        success {
            echo 'üéâ Build and Push Successful!'
        }
        failure {
            echo '‚ùå Build or Push Failed.'
        }
    }
}
